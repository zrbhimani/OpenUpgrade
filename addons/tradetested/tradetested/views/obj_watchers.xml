<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record model="ir.ui.view" id="view_obj_wizard_invite">
      <field name="name">Add Watchers</field>
      <field name="model">obj.wizard.invite</field>
      <field name="arch" type="xml">
        <form string="Add Watchers">
          <group>
            <field name="res_model" invisible="1"/>
            <field name="res_id" invisible="1"/>
            <field name="user_ids" widget="many2many_tags" placeholder="Add other users..."/>
          </group>
          <footer>
            <button string="Add Watchers"
                    name="add_watchers" type="object" class="btn-primary"/>
            <button string="Cancel" class="btn-default" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

  </data>
</odoo>

